@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Landing.cshtml";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HResonance</title>
    <link href="~/Content/Theme/images/favicon.ico" rel="icon" type="image/x-icon" />

    <!--@Styles.Render("~/Content/Theme")
    @Scripts.Render("~/bundles/modernizr")-->
    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="/Content/Theme/css/bootstrap-admin-theme.css" rel="stylesheet" />
    <link href="/Content/Theme/css/site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet" />
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="/Scripts/modernizr-2.6.2.js"></script>


    <style>
        .group1 {
            margin-right: 10%;
        }

        .group2 {
            margin-left: 10%;
        }

        #menuitems a:hover {
            border-bottom: 2px solid #00accd !important;
        }

        * {
            font-size: 100%;
            font-family: 'Roboto', sans-serif;
        }
    </style>
    <style>
        input.styling {
            background-color: rgba(245, 245, 245, 0.498039);
            border: none;
            border-bottom: solid 2px #c9c9c9;
        }
    </style>
    <script>
        $(document).on("click", "#save", function () {
            var fname = $("#fname").val();
            var lname = $("#lname").val();
            var title = $("#title").val();
            var companyname = $("#companyname").val();
            var email = $("#email").val();
            var phone = $("#phone").val()
            var address = $("#address").val();
            var city = $("#city").val();
            var state = $("#state").val();
            var zip = $("#zip").val();
            var comment = $("#comment").val();
            if (fname == "" || lname == "" || comment == "" || title == "" || companyname == "" || email == ""
                || phone == "" || address == "" || city == "" || state == "" || zip == "") {
                $('#mymodal').modal('toggle');
            }
            else {
                $.ajax({
                    url: "/RequestFeature/requestFeature",
                    datatype: "text",
                    data: {
                        'fname': fname, 'lname': lname, 'comment': comment, 'title': title,
                        'companyname': companyname, 'email': email, 'phone': phone,
                        'address': address, 'city': city, 'state': state, 'zip': zip
                    },
                    type: "POST",
                    success: function (data) {
                        console.log(data.message);
                        window.location.href = '/ThankYou';
                        return true;
                    },
                    error: function () {
                        return false;
                    }
                });
            }
		});
    </script>
</head>
<body class="bootstrap-admin-with-small-navbar">

    <!-- main / large navbar -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".main-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div>
                    <a class="navbar-brand" style="margin-left:43%;" href="/"><img src="~/Content/Theme/images/HResonance.jpg" width="110" height="60" /></a>
                </div>
                <div class="collapse navbar-collapse bootstrap-admin-navbar-sm" style="width:100%;margin-left:22.5%;margin-top:-4%;">
                    <ul style="width:72em" class="nav navbar-nav navbar-right">
                        <li id="menuitems">@Html.ActionLink("Sign Up", "Index", "SignUp")</li>
                        <li id="menuitems">@Html.ActionLink("Survey", "Index", "Survey")</li>
                        <li id="menuitems">@Html.ActionLink("Request Features", "Index", "Features")</li>
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <!-- Modal -->
    <div class="modal fade" id="mymodal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Input Validation Error!</h4>
                </div>
                <div class="modal-body">
                    <p>You can't have any empty request!</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>
    <h2 style="text-align:center; font-size:200%; margin-bottom:2%; margin-top:7%;">Please tell us what kind of features you desire!</h2>
    <div style="width:24%; margin-left:35%;">
        <form>
            <input class="styling" placeholder="First Name" type="text" id="fname">
            <input class="styling" placeholder="Last Name" type="text" id="lname">
            <input class="styling" placeholder="Title" type="text" id="title">
            <input class="styling" placeholder="Company Name" type="text" id="companyname">
            <input class="styling" placeholder="E-mail" type="text" id="email">
            <input class="styling" placeholder="Phone" type="text" id="phone">
            <input class="styling" placeholder="Street Address" type="text" id="address">
            <input class="styling" placeholder="City" type="text" id="city">
            <input class="styling" placeholder="ST" type="text" id="state">
            <input class="styling" placeholder="ZIP" type="text" id="zip">
            <br /><br />
            <textarea class="styling" placeholder="Request a Feature!" form="usrform" rows="4" cols="50" id="comment"></textarea><br /><br />

            <button class="btn btn-info" id="save" type="submit" data-toggle="modal">Send</button>
        </form>
    </div>

</body>
</html>
