        $("tbody").on("click", ".delete", function () {
            delID = $(this).closest("tr").children('td:eq(0)').text();
            $('#deleteModal').modal('show');
        });
        $(document).on("click", ".confirm", function () {
            $.ajax({
                url: "/Rules/Delete",
                datatype: "text",
                data: { 'RCode': delID },
                type: "POST",
                success: function (data) {
                    drawTable();
                    return true;
                },
                error: function () {
