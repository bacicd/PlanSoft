    <style>
        .tooLong {
            width: 100%;
            padding: 3px;
            box-sizing: border-box;
        }

        input {
            outline: 0;
            border-width: 0 0 .01em 0;
            border-color: black;
        }

        input:focus {
            border-color: lightblue;
        }

    </style>

    <script>
        $(document).ready(function () { drawTable() });

        function drawTable() {
            dataTable = $('#example').dataTable({
                destroy: true,
                bProcessing: true,
                sAjaxSource: '@Url.Action("LoadAttributes", "Attributes")',
                "columnDefs": [{
                    "targets": -1,
                    "data": null,
                    "defaultContent": "<button class =\"glyphicon glyphicon-pencil edit\"></button> <button class =\"glyphicon glyphicon-trash delete\"></button>"
                }],
                dom: 'Bfrtip',
                buttons: [
                     {
                         extend: 'excel',
                         text: '<i class="fa fa-file-excel-o"></i>',
                         titleAttr: 'Excel',
                         exportOptions: {
                             columns: ':visible'
                         }
                     },
                      {
                          extend: 'csv',
                          text: '<i class="fa fa-file-text-o"></i>',
                          titleAttr: 'CSV',
                          exportOptions: {
                              columns: ':visible'
                          }
                      },
                      {
                          extend: 'pdf',
                          text: '<i class="fa fa-file-pdf-o"></i>',
                          titleAttr: 'PDF',
                          exportOptions: {
                              columns: ':visible'
                          }
                      },
                      {
                          extend: 'colvis',
                          text: '<i class="fa fa-eye"></i>',
                          titleAttr: "Columns"
                      }
                ]

            });
            return true;
        }

        $(document).on("click", ".save", function () {
            testStr = "([A-Za-z0-9])+"
            var regex = new RegExp(testStr);
            eleCode = $("#ruleCode").val();
            eleName = $("#ruleName").val();
            attribCode= $("#attribCode").val();
            attribName = $("#attribName").val();
            ruleCreator = $("#ruleCreator").val();
            test1 = regex.test(eleCode);
            test2 = regex.test(eleName);
            test3 = regex.test(attribCode);
            test4 = regex.test(attribName);
            test5 = regex.test(ruleCreator);
            if (!test1 || !test2 || !test3 || !test4 || !test5) {
                $('#addmessage').html("Fields must not be empty or have special characters");
                return false;
            }
            $.ajax({
                url: "/Attributes/Add",
                datatype: "text",
                data: { 'EleCode': $('#ruleCode').val(), 'EleName': $('#ruleName').val(), 'AttribCode': $('#attribCode').val(), 'AttribName': $('#attribName').val(), 'Creator': $('#ruleCreator').val() },
                type: "POST",
                success: function (data) {
                    drawTable();
                    $('#addmessage').html("");
                    $('#myModal').modal('hide');
                    return true;
                },
                error: function () {
                    return false;
                }
            });
        });


        $("tbody").on("click", ".edit", function () {
            ID = $(this).closest("tr").children('td:eq(0)').text();
            Name = $(this).closest("tr").children('td:eq(1)').text()
            Code = $(this).closest("tr").children('td:eq(2)').text()
            AttribName = $(this).closest("tr").children('td:eq(3)').text()

            $('#editModal').modal('show');
            $('#editMessage').html("");
            $("#updateEleCode").val(ID);
            $("#updateEleName").val(Name);
            $('#updateAttribCode').val(Code);
            $('#updateAttribName').val(AttribName);

            $(document).on("click", ".update", function () {
                testStr = "([A-Za-z0-9])+"
                var regex = new RegExp(testStr);
                eleCode = $("#updateEleCode").val();
                eleName = $("#updateEleName").val();
                attribCode = $("#updateAttribCode").val();
                attribName = $("#updateAttribName").val();
                test1 = regex.test(eleCode);
                test2 = regex.test(eleName);
                test3 = regex.test(attribCode);
                test4 = regex.test(attribName);
                if (!test1 || !test2 || !test3 || !test4) {
                    $('#editMessage').html("Fields must not be empty or have special characters");
                    return false;
                }
                $.ajax({
                    url: "/Attributes/Update",
                    datatype: "text",
                    data: { 'EleCode': ID, 'NewEleCode': $('#updateEleCode').val(), 'NewEleName': $('#updateEleName').val(), 'NewAttribCode': $('#updateAttribCode').val(), 'NewAttribName': $('#updateAttribName').val() },
                    type: "POST",
                    success: function (data) {
                        drawTable();
                        $('#editModal').modal('hide');
                        return true;
                    },
                    error: function () {
                        return false;
                    }
                });
            });
        });



        $("tbody").on("click", ".delete", function () {
            delID = $(this).closest("tr").children('td:eq(0)').text();
            $('#deleteModal').modal('show');
        });
        $(document).on("click", ".confirm", function () {
            $.ajax({
                url: "/Attributes/Delete",
                datatype: "text",
                data: { 'EleCode': delID},
                type: "POST",
                success: function (data) {
                    drawTable();
                },
                error: function () {
                }
            });
        });

        $(document).ready(function () {
            $('tbody tr').addClass('visible');
            $('thead tr th input:text').keyup(function (event) {
                if (event.keyCode == 27 || $(this).val() == '') {

                    $('tbody tr td ').show();

                }
                else {
                    for (var i = 1 ; i < 10 ; i++) {
                        if ($("thead tr th:nth-child(" + i + ") input:text").val().length > 0) {
                            var fn = filter("tbody>tr > :nth-child(" + i + ")", $(this).val());
                        }
                    }
                }
            });
        });

        function filter(selector, query) {
            var z = null;
            query = $.trim(query);
            query = query.replace(/ /gi, '|');
            $(selector).each(function () {
                if ($(this).text().search(new RegExp(query, "i")) < 0) {
                    $(this).siblings().hide();
                    $(this).hide();
                }
                else {
                    $(this).siblings().show();
                    $(this).show();
                }
            });
        }

    </script>
}

