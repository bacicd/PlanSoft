<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HResonance</title>
    <link href="~/Content/Theme/images/favicon.ico" rel="icon" type="image/x-icon"/>
    <!--@Styles.Render("~/Content/Theme")
    @Scripts.Render("~/bundles/modernizr")-->
    <link href="/Content/bootstrap.css" rel="stylesheet" />
    <link href="/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="/Content/Theme/css/bootstrap-admin-theme.css" rel="stylesheet" />
    <link href="/Content/Theme/css/site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet"/>

    <script src="/Scripts/modernizr-2.6.2.js"></script>

    <style>
        .group1 {
            margin-right: 5%;
        }

        .group2 {
            margin-left: 2%;
        }
        #menuitems a:hover { border-bottom:2px solid #00accd !important;}
        *{
            font-size:100%;
            font-family:'Roboto', sans-serif;
        }
    </style>

</head>
<body class="bootstrap-admin-with-small-navbar">

    <!-- main / large navbar -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".main-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div>
                    <a class="navbar-brand" style="margin-left:42%;" href="/"><img src="~/Content/Theme/images/HResonance.jpg" width="110" height="60" /></a>
                </div>
                <div class="collapse navbar-collapse bootstrap-admin-navbar-sm" style="width:100%;margin-right:25%;margin-top:-4%;">
                    <ul style="width:72em" class="nav navbar-nav navbar-right">
                        <li id="menuitems"class="group3">@Html.ActionLink("HOME", "Index", "Home")</li>
                        
                        <li id="menuitems">@Html.ActionLink("INVENTORY", "Index","Inventory")</li>
                        <li id="menuitems">@Html.ActionLink("DOCUMENTS", "Index")</li>
                        <li id="menuitems">@Html.ActionLink("ANALYSIS", "Index")</li>
                        <li id="menuitems">@Html.ActionLink("OPEN TICKET", "Index", "OpenTicket")</li>
                        <li id="menuitems" class="group1">@Html.ActionLink("ADMINISTRATION", "Role", "Account")</li>
                        <li id="menuitems" class="group2"><a href="#">Reminders <i class="glyphicon glyphicon-bell"></i></a></li>
                        <li id="menuitems"><a href="#">Settings <i class="glyphicon glyphicon-cog"></i></a></li>
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="container" style="margin-top:8%;">
        <div class="row">
            @RenderBody()
        </div>
        <div class="row">
            <hr>
            <footer role="contentinfo">
                <p>@DateTime.Now.Year - HResonance &copy;</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-45396411-1', 'azurewebsites.net');
        ga('send', 'pageview');

    </script>
</body>
</html>
