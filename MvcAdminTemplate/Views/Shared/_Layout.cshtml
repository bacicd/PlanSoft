<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PlanSoft</title>
    @Styles.Render("~/Content/Theme")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .group1 {
            margin-right: 0%;
        }

        .group2 {
            margin-left: 0%;
        }
    </style>
</head>
<body class="bootstrap-admin-with-small-navbar">

    <!-- main / large navbar -->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="row">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".main-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/Elements"><img src="~/Content/Theme/images/logo.PNG" /></a>
                </div>
                <div class="collapse navbar-collapse bootstrap-admin-navbar-sm" style="margin-right:20%;margin-top:2%;">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Instance", "Index")</li>
                        <li>@Html.ActionLink("Security", "Index")</li>
                        <li>@Html.ActionLink("Inventory", "Index")</li>
                        <li>@Html.ActionLink("Documents", "Index")</li>
                        <li class="group1">@Html.ActionLink("Analysis", "Index")</li>
                        <li class="group2"><a href="#">Reminders <i class="glyphicon glyphicon-bell"></i></a></li>
                        <li><a href="#">Settings <i class="glyphicon glyphicon-cog"></i></a></li>
                        @Html.Partial("_LoginPartial")
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div class="container" style="margin-top:8%;">
        <div class="row">
            @RenderBody()
        </div>
        <div class="row">
            <hr>
            <footer role="contentinfo">
                <p>@DateTime.Now.Year - PlanSoft &copy;</p>
            </footer>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-45396411-1', 'azurewebsites.net');
        ga('send', 'pageview');

    </script>
</body>
</html>
